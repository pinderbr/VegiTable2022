<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.VegiTable" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/vegi_green</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/vegi_green</item>
        <item name="colorSecondaryVariant">@color/vegi_green</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="basic_text_style">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="bold_text">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="button_style">
        <item name="android:background">@color/vegi_green</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="fragment_style">
        <item name="android:background">@color/darker_grey</item>
    </style>

    <style name="bottom_navigation_theme">
        <item name="colorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/dark_grey</item>
    </style>

    <style name="current_slider">
        <item name="android:enabled">false</item>
        <item name="trackColorActive">@color/vegi_orange</item>
        <item name="thumbColor">@color/vegi_orange</item>
        <item name="trackColorInactive">#404040</item>
    </style>

    <style name="current_value_text">
        <item name="android:textColor">@color/vegi_orange</item>
    </style>

</resources>