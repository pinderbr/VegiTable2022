<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <style name="view_profile_inputs">
        <item name="android:layout_width">@dimen/_250sdp</item>
        <item name="android:layout_height">@dimen/_45sdp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">@dimen/_5sdp</item>
        <item name="android:ems">8</item>
    </style>

    <style name="create_account_inputs">
        <item name="android:layout_width">@dimen/_250sdp</item>
        <item name="android:layout_height">@dimen/_45sdp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">@dimen/_5sdp</item>
        <item name="android:layout_marginBottom">@dimen/_5sdp</item>
        <item name="android:ems">10</item>
    </style>

    <style name="rel_layout_overall">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/vegi_black</item>
    </style>

    <style name="lin_layout_overall">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/_10sdp</item>
        <item name="android:layout_marginRight">@dimen/_10sdp</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="generic_button">
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingTop">@dimen/_5sdp</item>
        <item name="android:paddingBottom">@dimen/_5sdp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:backgroundTint">@color/vegi_green</item>
    </style>

    <style name="rounded_button" parent="generic_button">
        <item name="cornerRadius">50dp</item>
    </style>

    <style name="hor_layout_btn_right" parent="generic_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/_10sdp</item>
        <item name="android:minWidth">@dimen/_175sdp</item>
    </style>

    <style name="generic_edit_text">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="endIconMode">clear_text</item>
    </style>

    <style name="full_width_editText">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="endIconMode">clear_text</item>
    </style>

    <style name="edit_text_left" parent="generic_edit_text">
        <item name="android:layout_width">@dimen/_135sdp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">@dimen/_10sdp</item>
        <item name="android:layout_marginBottom">@dimen/_4sdp</item>
    </style>

    <style name="edit_text_right" parent="generic_edit_text">
        <item name="android:layout_width">@dimen/_135sdp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/_4sdp</item>

    </style>

    <style name="decimal_edit_text">
        <item name="android:inputType">numberDecimal</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>


    <style name="char_edit_text">
        <item name="android:inputType">text</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="hor_layout_edittext_and_btn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="hor_layout_min_max">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="generic_dropdown" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/_5sdp</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
    </style>

</resources>