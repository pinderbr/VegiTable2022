<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="generic_card_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/generic_text</item>
    </style>

    <style name="card_text_header" parent="generic_card_text">
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="card_text_list_items" parent="generic_card_text">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:layout_marginTop">@dimen/_5sdp</item>
        <item name="android:layout_marginLeft">@dimen/_5sdp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="card_icons">
        <item name="android:layout_width">@dimen/_25sdp</item>
        <item name="android:layout_height">@dimen/_25sdp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="tint">@color/white</item>
    </style>

    <style name="dialog_buttons" parent="generic_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/_5sdp</item>
        <item name="minWidth">@dimen/_75sdp</item>
    </style>

    <style name="card_style_new">
        <item name="cardBackgroundColor">#303030</item>
        <item name="cardCornerRadius">@dimen/_8sdp</item>
        <item name="strokeColor">@color/vegi_green</item>
        <item name="strokeWidth">@dimen/_2sdp</item>
    </style>

</resources>